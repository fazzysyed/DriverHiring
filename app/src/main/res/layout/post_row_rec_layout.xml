<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/name_rec_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/user_profile_img_rec_post"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/placeholder_user"
        android:layout_below="@id/name_rec_post"
        android:layout_margin="5dp"/>
        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_below="@id/name_rec_post"
            android:layout_toRightOf="@id/user_profile_img_rec_post"
            android:src="@drawable/route_arrow"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/arrow_img">

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:text="Start Point" />

        <TextView
            android:id="@+id/startpointtxt"
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="3.0"
            android:clickable="false"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Loading .."
            android:textColor="@color/gray_text_color"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Point" />

        <TextView
            android:id="@+id/endpointtxt"
            android:layout_width="fill_parent"
            android:layout_height="0.0px"
            android:layout_weight="3.0"
            android:clickable="false"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Loading .."
            android:textColor="@color/gray_text_color"
            android:textSize="15sp"
            android:visibility="visible" />
    </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>