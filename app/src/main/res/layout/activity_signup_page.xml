<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color_grey"
    tools:context=".SignupPage">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_signup"
        app:title="Signup"
        app:titleTextColor="@color/white"
        >

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_centerHorizontal="true"

        android:layout_centerInParent="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                  android:background="@color/btn_bg_color_green"
                    android:elevation="5dp"
                    android:foreground="@drawable/ic_person_black_24dp" />

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:background="@color/color_dark_grey_edittext"
                    android:elevation="5dp"
                    android:hint="Firstname"
                    android:text="fyp"
                    android:padding="5dp"
                    android:textColor="@color/text_color_grey"
                    android:textColorHint="@color/text_color_grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:elevation="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                  android:background="@color/btn_bg_color_green"
                    android:elevation="5dp"
                    android:foreground="@drawable/ic_person_black_24dp" />

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:background="@color/color_dark_grey_edittext"
                    android:elevation="5dp"
                    android:hint="Lastname"
                    android:text="ahmad"
                    android:padding="5dp"
                    android:textColor="@color/text_color_grey"
                    android:textColorHint="@color/text_color_grey" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
              android:background="@color/btn_bg_color_green"
                android:elevation="5dp"
                android:foreground="@drawable/ic_email_black_24dp" />

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:background="@color/color_dark_grey_edittext"
                android:elevation="5dp"
                android:hint="Email"
                android:padding="5dp"
                android:text="qw@gmail.com"
                android:textColor="@color/text_color_grey"
                android:textColorHint="@color/text_color_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
              android:background="@color/btn_bg_color_green"
                android:elevation="5dp"
                android:foreground="@drawable/ic_lock_outline_black_24dp" />

            <EditText
                android:id="@+id/pass_signup"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:background="@color/color_dark_grey_edittext"
                android:elevation="5dp"
                android:hint="Password"
                android:text="123456"
                android:padding="5dp"
                android:textColor="@color/text_color_grey"
                android:textColorHint="@color/text_color_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
              android:background="@color/btn_bg_color_green"
                android:elevation="5dp"
                android:foreground="@drawable/ic_lock_outline_black_24dp" />

            <EditText
                android:id="@+id/confirm_pass_signup"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:background="@color/color_dark_grey_edittext"
                android:elevation="5dp"
                android:text="123456"
                android:hint="Confirm Password"
                android:padding="5dp"
                android:textColor="@color/text_color_grey"
                android:textColorHint="@color/text_color_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
              android:background="@color/btn_bg_color_green"
                android:elevation="5dp"
                android:padding="5dp"
                android:foreground="@drawable/ic_card_black_24dp" />

            <EditText
                android:id="@+id/cnic_signup"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:background="@color/color_dark_grey_edittext"
                android:elevation="5dp"
                android:hint="CNIC"
                android:text="321312312"
                android:padding="5dp"
                android:textColor="@color/text_color_grey"
                android:textColorHint="@color/text_color_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
              android:background="@color/btn_bg_color_green"
                android:elevation="5dp"
                android:foreground="@drawable/ic_phone_black_24dp" />

            <EditText
                android:id="@+id/phoneno_signup"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:background="@color/color_dark_grey_edittext"
                android:elevation="5dp"
                android:hint="Enter Phone No"
                android:text="3123123"
                android:padding="5dp"
                android:textColor="@color/text_color_grey"
                android:textColorHint="@color/text_color_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
              android:background="@color/btn_bg_color_green"
                android:elevation="5dp"
                android:foreground="@drawable/ic_city_black_24dp" />

            <EditText
                android:id="@+id/signup_provence"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:background="@color/color_dark_grey_edittext"
                android:elevation="5dp"
                android:hint="Enter Province"
                android:text="KPK"
                android:padding="5dp"
                android:textColor="@color/text_color_grey"
                android:textColorHint="@color/text_color_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
              android:background="@color/btn_bg_color_green"
                android:elevation="5dp"
                android:foreground="@drawable/ic_city_black_24dp" />

            <EditText
                android:id="@+id/signup_city"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:background="@color/color_dark_grey_edittext"
                android:elevation="5dp"
                android:hint="Enter City"
                android:text="Kohat"
                android:padding="5dp"

                android:textColor="@color/text_color_grey"
                android:textColorHint="@color/text_color_grey" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/btn_below"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button

            android:id="@+id/contniue_as_driver_btn"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:background="@drawable/button_bg"
            android:text="Contniue as Driver"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/btn_bg_color_green"
            android:foreground="@drawable/ic_arrow_forward_white_24dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_below"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button

            android:id="@+id/contniue_as_passenger_btn"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:background="@drawable/button_bg"
            android:text="Contniue as Passenger"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/btn_bg_color_green"
            android:foreground="@drawable/ic_arrow_forward_white_24dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

</RelativeLayout>